

<label for="cat_name">Name</label>
<input name="cat[name]" id="cat_name" type="text" value=<%= cat.name %>>
<br>

<label for="cat_age">Age</label>
<input name="cat[age]" id="cat_age" type="text" value=<%= cat.age %>>
<br>

<label>Sex</label>
<div>
  <input name="cat[sex]" id="cat_sex_m" type="radio" value="M"
    <%= 'checked' if cat.sex == 'M' %>>
  <label for="cat_sex_m">Male</label>
  <input name="cat[sex]" id="cat_sex_f" type="radio" value="F"
    <%= 'checked' if cat.sex == 'F' %>>
  <label for="cat_sex_f">Female</label>
</div>
<br>

<label for="cat_color">Coat Color</label>
<select name="cat[color]">
  <option></option>
  <option value="brown" <%= 'selected' if cat.color == 'brown' %>>Brown</option>
  <option value="black" <%= 'selected' if cat.color == 'black' %>>Black</option>
  <option value="white" <%= 'selected' if cat.color == 'white' %>>White</option>
  <option value="other" <%= 'selected' if cat.color == 'other' %>>Other</option>
</select>
<br>

<label for="cat_birth_date">Birth date</label>
<input name="cat[birth_date]" id="cat_birth_date" type="date"
  value=<%= cat.birth_date%>>

