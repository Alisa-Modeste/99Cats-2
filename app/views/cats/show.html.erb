<h1><%= @cat.name %></h1>

<table>
  <tr>
    <td>Name</td>
    <td><%= @cat.name %></td>
  <tr/>

  <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
  <tr/>

  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  <tr/>

  <tr>
    <td>Birth Date</td>
    <td><%= @cat.birth_date %></td>
  <tr/>

  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  <tr/>
</table>

<br>
<h2>Requests for this cat:</h2>
<table>
  <tr>
    <td>Start date</td>
    <td>End date</td>
    <td>Status</td>
    <td></td>
    <td></td>
  </tr>

<% @cat_rental_requests.each do |crr| %>
  <tr>
    <td><%= crr.start_date %></td>
    <td><%= crr.end_date %></td>
    <td><%= crr.status%></td>

    <% if crr.pending? && crr.cat.owner.id == current_user.id %>
      <td><%= button_to "Approve", approve_cat_rental_request_url(crr)%></td>
      <td><%= button_to "Deny", deny_cat_rental_request_url(crr)%></td>
    <% end %>
  </tr>
<% end %>

</table>

<br>
<%= link_to "Update cat", edit_cat_url(@cat) %>
